manifest {
    description = 'Runs a Comet search followed by TPP analysis'
    author = 'Patrick Pedrioli'
}

params {

    help = false
    dda_folder = 'Data/DDA'
    comet_params = 'Params/comet.params'
    comet_threads = 8
    protein_db = 'Results/Databases/proteome.fasta'
    tpp = "-OAPdplIw -PPM"
    decoy = "DECOY_"
    no_pool = false

    # Stylesheets for tsv export
    pepxml_xsl = 'Params/pepxml2tsv.xsl'
    protxml_xsl = 'Params/protxml2tsv.xsl'
}

process{
    withName:cometSearch {
	container = 'digitalproteomes/comet'
    }
    withName:pooledTpp {
	container = 'digitalproteomes/tpp-dev'
    }
    withName:splitTpp {
	container = 'digitalproteomes/tpp-dev'
    }
    withName:stPeter {
	container = 'digitalproteomes/tpp-dev'
    }    
    withName:mayu {
	container = 'digitalproteomes/tpp-dev'
    }
    withName:tppStat {
	container = 'digitalproteomes/tpp-dev'
    }
    withName:pepxml2tsv {
    	container = 'digitalproteomes/python'
    }
    withName:protxml2tsv {
    	container = 'digitalproteomes/python'
    }
}

docker {
    enabled = true
    sudo = true
    runOptions = '-e LOCAL_USER_ID=$(id -u) -u $(id -u):$(id -g)'
}

executor {
     name = 'local'
     cpus = 28
     memory = '200 GB'
}